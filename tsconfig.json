{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "build",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "types": ["jasmine", "node", "react", "react-test-renderer"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.js", "spec/**/*.js"]
}
